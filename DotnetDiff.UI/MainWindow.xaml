<ac:AdonisWindow x:Class="DotnetDiff.UI.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:a="clr-namespace:AdonisUI;assembly=AdonisUI"
                 xmlns:ac="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
                 xmlns:ae="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
                 xmlns:c="clr-namespace:DotnetDiff.UI.Views.Controls"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:local="clr-namespace:DotnetDiff.UI"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:vm="clr-namespace:DotnetDiff.UI.ViewModels.Controls"
                 Title="DotnetDiff"
                 Width="1024"
                 MaxHeight="960"
                 Background="{DynamicResource {x:Static a:Brushes.Layer0BackgroundBrush}}"
                 IconVisibility="Collapsed"
                 ResizeMode="NoResize"
                 SizeToContent="Height"
                 mc:Ignorable="d">
    <Window.Style>
        <Style BasedOn="{StaticResource {x:Type Window}}"
               TargetType="Window" />
    </Window.Style>
    <Grid Margin="10">
        <StackPanel>
            <c:RepositorySelectorView />
            <c:ProjectsBuilderView />
        </StackPanel>
    </Grid>
</ac:AdonisWindow>
